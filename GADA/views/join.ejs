<head>
    <meta charset="utf-8">
    <title>GADA 서비스 회원 가입 페이지</title>
    <meta name="viewport" content="user-scalable=no,initial-scale=1,maximum-scale=1" />
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/51db22a717.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
</head>

<body>
    <div class="page-container">
        <div class="login-form-left-side">
                <div class="login-input-container">
                    <div class="login-input-wrap input-id">
                        <i class="far fa-envelope"></i>
                        <input id = "userId" placeholder="아이디" type="text">
                    </div>
                    <div class="login-input-wrap input-password">
                        <i class="fas fa-key"></i>
                        <input id="userPassword" placeholder="비밀번호"  type="password">
                    </div>
                    <div class="login-input-wrap input-password">
                        <i class="fas fa-key"></i>
                        <input id = "checkPassword" placeholder="비밀번호 확인"  type="password">
                    </div>
                </div>
                <div class="login-btn-wrap">
                    <button id = "signupBtn" class="login-btn">가입하기</button>
                </div>
            </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="js/global.script.js"></script>
    <script>
        $("#signupBtn").click(function () {
            var userId = $("#userId").val();
            var userPassword = $("#userPassword").val();
            var checkPassword = $("#checkPassword").val();
            $.ajax({
                url: "/join",
                type: "POST",
                data: {
                    userId: userId,
                    userPassword: userPassword,
                    checkPassword: checkPassword,
                },
                success: function (data) {
                    if (data == "성공") {
                        alert("회원가입 성공!");
                        window.location.href = "/login";
                    }
                    else{
                        alert("회원가입 실패! 비밀번호를 다시 확인해주세요");
                    }
                 },
            });
        });
        </script>
</body>

</html>